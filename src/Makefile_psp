TARGET = open-tgm
SOURCE_FILES_CPP= $(wildcard core/*.cpp) $(wildcard targets/psp/*.cpp) $(wildcard modes/*.cpp)
SOURCE_FILES_C= $(wildcard targets/psp/resources/*.c)
OBJS = $(SOURCE_FILES_C:.c=.o) $(SOURCE_FILES_CPP:.cpp=.o)

INCDIR = ./include ./targets/psp
CFLAGS = -G0 -Wall -DTARGET_PSP
CXXFLAGS = $(CFLAGS) -fno-exceptions -fno-rtti
ASFLAGS = $(CFLAGS)

LIBDIR =
LDFLAGS =
LIBS= -ljpeg -lpng -lz -lpspgum -lpspgu -lpsprtc -lm -lpspvram

EXTRA_TARGETS = EBOOT.PBP
PSP_EBOOT_TITLE = Open TGM

PSPSDK=$(shell psp-config --pspsdk-path)
include $(PSPSDK)/lib/build.mak

logo.o: logo.raw
	bin2o -i logo.raw logo.o logo
